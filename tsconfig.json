{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "strictNullChecks": true,
  },
  "include": [
    "src/**/*"
  ]
}